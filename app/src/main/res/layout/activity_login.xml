<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kr.co.djeit.simplesopping.activitys.LoginActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/tempBtn"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/login_btn"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <!--로그인버튼 클릭시 나오는 화면-->
        <LinearLayout
            android:id="@+id/loginMiniLayout"
            android:visibility="gone"
            android:background="@drawable/login_add_window"
            android:layout_width="296dp"
            android:layout_height="367dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/balck" />

            <EditText
                android:layout_marginTop="50dp"
                android:padding="5dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/login_edt_box"
                android:inputType="text"
                android:hint="아이디"/>

            <EditText
                android:inputType="textPassword"
                android:layout_marginTop="40dp"
                android:padding="5dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/login_edt_box"
                android:hint="비밀번호"/>

            <LinearLayout
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/login_btn"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/round_click_border_btn"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"
                    android:text="로그인"/>
                <Button
                    android:id="@+id/cancel_btn"
                    android:background="@drawable/round_click_border_btn"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="취소"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
